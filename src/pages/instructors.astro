        <script>
        
        let angulo = 0;
        let desplazamiento = 0;
        let ventanaVisible = [false, false]; 
        
        function rotarYMoverBoton(indice) {
    
            angulo += -180;
            desplazamiento = desplazamiento === 0 ? 20 : 0; 

            document.getElementById(`arrow-${indice}`).style.transform = `rotate(${angulo}deg)`;
            document.getElementById(`boton-instruc-${indice}`).style.transform = `translateY(${desplazamiento}px)`;

            if (ventanaVisible[indice - 1]) {
                ocultarVentana(indice); 
            } else {
                mostrarVentana(indice); 
            }
        }
    function mostrarVentana(indice) {
        const ventana = document.getElementById(`mi-ventana-${indice}`);
        ventana.style.display = 'block'; 
        setTimeout(() => {
            ventana.style.bottom = '50px'; 
        }, 10);
    
        ventanaVisible[indice - 1] = true;
    }
    
    function ocultarVentana(indice) {
        const ventana = document.getElementById(`mi-ventana-${indice}`);
        ventana.style.bottom = '-200px';
        setTimeout(() => {
            ventana.style.display = 'none';
        }, 500);
    
        ventanaVisible[indice - 1] = false;
    }
    
    function cerrarVentana(indice) {
        ocultarVentana(indice);
    }
    
    </script>
